# Application Configuration
APP_ID=basic
APP_BASE_PATH=dirname(__DIR__)
APP_DEFAULT_ROUTE=user/index
APP_COOKIE_VALIDATION_KEY=your-cookie-validation-key
APP_ENABLE_PRETTY_URL=true
APP_SHOW_SCRIPT_NAME=false
APP_DEBUG=true

# Auth API Client Configuration
AUTH_API_BASE_URL=http://localhost:3001/api
AUTH_API_CLIENT_TIMEOUT=2.0

# User API Client Configuration
USER_API_BASE_URL=http://localhost:3002/api
USER_API_CLIENT_TIMEOUT=2.0

# News API Client Configuration
NEWS_API_BASE_URL=http://localhost:3002/api
NEWS_API_CLIENT_TIMEOUT=2.0

# User Component Configuration
USER_IDENTITY_CLASS=app\models\User
USER_ENABLE_AUTO_LOGIN=true

# Error Handler Configuration
ERROR_HANDLER_ACTION=site/error

# Mailer Configuration
MAILER_CLASS=yii\swiftmailer\Mailer
MAILER_USE_FILE_TRANSPORT=true

# Log Configuration
LOG_TRACE_LEVEL=3  # Set to 0 for non-debug environments

# Debug Module Configuration (only in dev environment)
DEBUG_MODULE_CLASS=yii\debug\Module

# Gii Module Configuration (only in dev environment)
GII_MODULE_CLASS=yii\gii\Module
